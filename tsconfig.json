{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "es2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/domain/*": ["src/domain/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/services/*": ["src/services/*"],
      "@/providers/*": ["src/providers/*"],
      "@/state/*": ["src/state/*"],
      "@/images/*": ["src/images/*"]
    }
  },
  "include": [
    "custom-next-env.d.ts",
    "**/*.ts",
    "**/*.js",
    "**/*.tsx",
    "**/*.jsx",
    ".eslintrc.js",
    "jest.config.js",
    "jest.setup.js"
  ],
  "exclude": [
    "node_modules",
    "next-env.d.ts",
    "public"
  ]
}
